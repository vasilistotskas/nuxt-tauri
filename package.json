{
  "name": "nuxtauri-monorepo",
  "type": "module",
  "version": "1.5.0",
  "private": true,
  "description": "Monorepo for Nuxt 4 and Tauri 2 multi-brand applications",
  "author": "Nicola Spadari",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=23"
  },
  "scripts": {
    "app": "bun run scripts/app.ts",
    "lint": "eslint . --fix",
    "postinstall": "cd apps/wecare && nuxt prepare"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/bun": "^1.3.3",
    "@types/node": "24.10.1",
    "@volar/typescript": "^2.4.26",
    "eslint": "^9.39.1",
    "eslint-plugin-better-tailwindcss": "3.7.11",
    "nuxt": "^4.2.1",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.5"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "esbuild",
    "unrs-resolver",
    "vue-demi"
  ]
}
