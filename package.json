{
  "name": "nuxtauri-monorepo",
  "type": "module",
  "version": "1.5.0",
  "private": true,
  "description": "Monorepo for Nuxt 4 and Tauri 2 multi-brand applications",
  "author": "Nicola Spadari",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "app": "bun run scripts/app.ts",
    "new-brand": "bun run scripts/new-brand.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "lint": "eslint . --fix",
    "typecheck": "tsc -b scripts && bun run scripts/typecheck.ts",
    "postinstall": "bun run scripts/prepare.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.4.3",
    "@nuxt/devtools": "3.2.1",
    "@nuxt/types": "2.18.1",
    "@types/bun": "^1.3.9",
    "@types/node": "25.3.0",
    "@volar/typescript": "^2.4.28",
    "eslint": "^10.0.1",
    "eslint-plugin-better-tailwindcss": "4.3.0",
    "nuxt": "^4.3.1",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.2.4"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "esbuild",
    "unrs-resolver",
    "vue-demi"
  ]
}
